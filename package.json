{
	"name": "@origo-ui/primitives",
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"build": "turbo build",
		"clean": "turbo clean",
		"format": "biome format .",
		"format:write": "biome format --write .",
		"lint": "biome lint . && turbo lint",
		"lint:write": "biome lint --write . && turbo lint",
		"prepare": "lefthook install",
		"quality": "biome check . && npm run type-check && npm run test",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"test": "turbo test",
		"type-check": "turbo type-check"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@chromatic-com/storybook": "^1.6.0",
		"@storybook/addon-essentials": "^8.1.11",
		"@storybook/addon-links": "^8.1.11",
		"@storybook/blocks": "^8.1.11",
		"@storybook/test": "^8.1.11",
		"@storybook/web-components": "^8.1.11",
		"@storybook/web-components-vite": "^8.1.11",
		"lefthook": "1.7.11",
		"storybook": "^8.1.11",
		"turbo": "^2.0.5",
		"typescript": "^5.5.2"
	},
	"packageManager": "npm@10.2.4",
	"engines": {
		"node": ">=18"
	}
}
