{
	"name": "@origo-ui/primitives",
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"build": "turbo build",
		"clean": "turbo clean",
		"format": "biome format .",
		"format:write": "biome format --write .",
		"lint": "biome lint . && turbo lint",
		"lint:write": "biome lint --write . && turbo lint",
		"prepare": "lefthook install",
		"quality": "biome check . && npm run type-check && npm run test",
		"storybook": "wait-on http://localhost:7007 && npm run storybook:wc & npm run storybook:react:no-open",
		"storybook:react": "cd packages/storybook-react && npm run storybook",
		"storybook:react:no-open": "cd packages/storybook-react && npm run storybook -- --no-open",
		"storybook:wc": "cd packages/storybook && npm run storybook",
		"test": "turbo test",
		"type-check": "turbo type-check"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.2",
		"lefthook": "^1.6.1",
		"turbo": "latest",
		"wait-on": "^7.2.0"
	},
	"packageManager": "npm@10.2.4",
	"engines": {
		"node": ">=18"
	}
}
